{
    "name": "with-typescript",
    "version": "1.0.0",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start -p 8443",
        "start:dev": "cross-env NODE_ENV=development next start -p 8443",
        "build:dev": "cross-env NODE_ENV=development next build",
        "analyze": "cross-env ANALYZE=true next build",
        "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
        "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
        "export": "next build && next export",
        "format": "prettier --write \"{constants, src}/**/*.{ts,tsx}\"",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "prettier": "prettier --list-different 'src/**/*.{ts, tsx}' || (echo '\nPlease fix code formatting by running:\nnpm run prettier:fix\n'; exit 1)",
        "prettier:fix": "prettier --write 'src/**/*.{ts, tsx}'",
        "tsc": "tsc -p ./ --noEmit",
        "test": "jest --silent --config jest.config.json",
        "test:watch": "jest --config jest.config.json --watch",
        "test:update": "jest --config jest.config.json -u",
        "ci-check": "npm run prettier && npm run lint && npm run tsc && npm run test",
        "storybook": "start-storybook -s ./public -p 6006 --no-dll",
        "build-storybook": "build-storybook --no-dll",
        "pm2": "pm2-runtime start ecosystem.json"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "@material-ui/styles": "^4.11.2",
        "axios": "^0.21.1",
        "deep-equal": "^2.0.5",
        "next": "latest",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-error-boundary": "^3.1.1",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3",
        "redux-thunk": "^2.3.0",
        "styled-components": "^5.2.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@next/bundle-analyzer": "^10.0.5",
        "@testing-library/react": "^11.2.6",
        "@types/enzyme": "^3.10.8",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.20",
        "@types/node": "^12.12.21",
        "@types/react": "^16.9.16",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.6.1",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.7",
        "jest": "^26.6.3",
        "next-build-id": "^3.0.0",
        "prettier": "^2.2.1",
        "redux-devtools-extension": "^2.13.8",
        "ts-jest": "^26.4.4",
        "typesafe-actions": "^5.1.0",
        "typescript": "4.0"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx)"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "testPathIgnorePatterns": [
            "./.next/",
            "./node_modules/"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.jest.json"
            }
        },
        "moduleDirectories": [
            "node_modules",
            "src",
            "."
        ]
    },
    "license": "MIT"
}
